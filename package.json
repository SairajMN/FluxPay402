{
  "name": "fluxpay-x402",
  "version": "1.0.0",
  "description": "Real-Time AI & API Micropayments using HTTP 402, Avail Nexus, and OpenRouter",
  "main": "backend/gateway.js",
  "scripts": {
    "start": "npm run start:gateway",
    "start:gateway": "node backend/gateway.js",
    "start:frontend": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "cypress run",
    "test:contracts": "npx hardhat test",
    "deploy:contracts": "hardhat run scripts/deploy.js",
    "verify:contracts": "hardhat run scripts/verify.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "keywords": [
    "http-402",
    "micropayments",
    "ai",
    "blockchain",
    "cross-chain",
    "avail",
    "nexus",
    "openrouter"
  ],
  "author": "FluxPay x402 dev",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "@avail-project/nexus-core": "^1.0.1-beta.0",
    "@openzeppelin/contracts": "^5.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "redis": "^4.6.8",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/jest": "^29.5.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.8.10",
    "chai": "^4.5.0",
    "cypress": "^13.4.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "hardhat": "^2.27.2",
    "hardhat-gas-reporter": "^1.0.10",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "solidity-coverage": "^0.8.17",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
